{
    "compilerOptions": {
        "module": "CommonJS",
        "target": "ES2016",
        "outDir": "dist",
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "rootDir": "src",
        "forceConsistentCasingInFileNames": true,
        "skipLibCheck": true
    },
    "include": ["src/**/*"]
}