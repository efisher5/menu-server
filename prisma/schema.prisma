// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  output = "../node_modules/.prisma/client"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model user {
  id                String                @id @default(uuid())
  first_name        String
  last_name         String
  email             String                @unique
  password          String
  recipes           recipe[]
  created_ts        DateTime              @default(now())
  updated_ts        DateTime?
}

model recipe {
  id                String                @id @default(uuid())
  user              user                  @relation(fields: [user_id], references: [id])
  user_id           String
  name              String
  notes             String?
  prep_time_hours   Int
  prep_time_minutes Int
  cook_time_hours   Int
  cook_time_minutes Int
  ingredients       String[]
  instructions      String[]
  created_ts        DateTime              @default(now())
  created_by        String
  updated_ts        DateTime?
  updated_by        String?
}
